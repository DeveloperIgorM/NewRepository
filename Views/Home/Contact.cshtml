@using NewRepository

@{
    Layout = "_Layout";
}

@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger text-dark" role="alert">
        @TempData["MensagemErro"]
    </div>
}

<style>
    body, html {
        margin: 0;
        padding: 0;
        height: 100%;
        overflow: hidden; /* Remove a rolagem da página */
        font-family: 'Arial', sans-serif;
    }

    /* Background desfocado e cobrindo toda a tela */
    .login-background {
        background: linear-gradient(135deg, #f5f7fa, #7B68EE);
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        filter: blur(5px); /* Aplicar desfoque na imagem de fundo */
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: -1; /* Garantir que o background fique atrás do conteúdo */
    }

    .login-container {
        background-color: rgba(255, 255, 255, 0.9);
        padding: 30px;
        border-radius: 10px;
        max-width: 400px;
        width: 100%;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        position: relative;
        z-index: 1; /* Garantir que o formulário fique sobre a imagem */
    }

    /* Centralizar o conteúdo vertical e horizontalmente */
    .login-wrapper {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        position: relative;
    }

    form {
        display: flex;
        flex-direction: column;
    }

    .mb-3 label {
        font-weight: bold;
        font-size: 1.1em;
    }

    .form-control {
        padding: 10px;
        font-size: 1em;
        border: 1px solid #ccc;
        border-radius: 5px;
        margin-bottom: 15px;
    }

    .btn-warning {
        background-color: #f0ad4e;
        color: black;
        border: none;
        padding: 10px 0;
        border-radius: 5px;
        font-size: 1.1em;
        transition: background-color 0.3s ease;
    }

        .btn-warning:hover {
            background-color: #d98c1f;
            cursor: pointer;
        }

    .alert-danger {
        position: absolute;
        top: 20px;
        right: 20px;
        z-index: 1000;
        background-color: rgba(255, 0, 0, 0.8);
        color: white;
        padding: 10px;
        border-radius: 5px;
    }

    /* Estilo para o cabeçalho que fica fixo na parte superior */
    header {
        position: relative;
        top: 0;
        left: 0;
        width: 100%;
        background-color: #fff;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        z-index: 1000;
    }

    .login-wrapper {
        padding-bottom: 150px; /* Espaço para o cabeçalho */
    }

    /* Remover espaço branco abaixo do cabeçalho */
    main {
        padding: 0;
        margin: 0;
    }
</style>

<!-- Container principal com o fundo desfocado -->
<div class="login-background"></div>

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contato - FindBooks</title>
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        /* Fundo estilizado */
        body {
            background: linear-gradient(135deg, #f5f7fa, #333);
            font-family: Arial, sans-serif;
            color: #fff;
            margin: 0;
            padding: 0;
        }

        .login-wrapper {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            padding: 20px;
        }

        .login-container {
            background: rgba(255, 255, 255, 0.1);
            padding: 30px;
            border-radius: 15px;
            text-align: center;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
            backdrop-filter: blur(10px);
            width: 100%;
            max-width: 600px;
            animation: fadeIn 1s ease-out;
        }

        /* Títulos estilizados */
        .section-title {
            font-size: 2rem;
            font-weight: bold;
            color: #fff;
            text-shadow: 0 3px 10px rgba(0, 0, 0, 0.5);
            margin-bottom: 20px;
        }

        .content-text {
            font-size: 1.2rem;
            line-height: 1.6;
            margin-bottom: 20px;
        }

        /* Estilização dos ícones sociais */
        .social-icons a {
            margin: 0 10px;
            font-size: 30px;
            color: #fff;
            transition: transform 0.3s ease, color 0.3s ease;
        }

        .social-icons a:hover {
            transform: scale(1.2);
            color: #f0db4f;
        }

        /* Animação suave ao carregar a página */
        keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(-20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Responsividade */
        media (max-width: 768px) {
            .section-title {
                font-size: 1.8rem;
            }
            .content-text {
                font-size: 1rem;
            }
            .social-icons a {
                font-size: 24px;
            }
        }
    </style>
</head>
<body>

<div class="login-wrapper">
    <div class="login-container">
        <!-- Seção de contato -->
        <div class="content-section">
            <div class="section-title">Contato</div>
            <div class="content-text">
                <p>Email: <a href="mailto:findbooks2024@hotmail.com" style="color: #f0db4f; text-decoration: none;">findbooks2024@hotmail.com</a></p>
                <p>Telefone: <a href="tel:+15500000000" style="color: #f0db4f; text-decoration: none;">(15) 0000-0000</a></p>
            </div>
        </div>

        <!-- Redes sociais -->
        <div class="content-section">
            <div class="section-title">Siga-nos</div>
            <div class="content-text social-icons">
                <a href="https://www.instagram.com" target="_blank">
                    <i class="bi bi-instagram"></i>
                </a>
                <a href="https://www.twitter.com" target="_blank">
                    <i class="bi bi-twitter"></i>
                </a>
                <a href="https://www.facebook.com" target="_blank">
                    <i class="bi bi-facebook"></i>
                </a>
            </div>
        </div>
    </div>
</div>

<script>
    // Efeito ao passar o mouse nos ícones sociais
    document.querySelectorAll('.social-icons a').forEach(icon => {
        icon.addEventListener('mouseenter', () => {
            icon.style.color = '#ff7675'; // Cor quando o mouse está sobre o ícone
        });
        icon.addEventListener('mouseleave', () => {
            icon.style.color = '#fff'; // Cor padrão do ícone
        });
    });
</script>

</body>
</html>


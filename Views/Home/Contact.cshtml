@using NewRepository

@{
    Layout = "_Layout";
}

@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger text-dark" role="alert">
        @TempData["MensagemErro"]
    </div>
}

<style>
    body, html {
        margin: 0;
        padding: 0;
        height: 100%;
        overflow: hidden; /* Remove a rolagem da página */
        font-family: 'Arial', sans-serif;
    }

    /* Background desfocado e cobrindo toda a tela */
    .login-background {
        background: linear-gradient(135deg, #f5f7fa, #7B68EE);
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        filter: blur(5px); /* Aplicar desfoque na imagem de fundo */
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: -1; /* Garantir que o background fique atrás do conteúdo */
    }

    .login-container {
        background-color: rgba(255, 255, 255, 0.9);
        padding: 30px;
        border-radius: 10px;
        max-width: 400px;
        width: 100%;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        position: relative;
        z-index: 1; /* Garantir que o formulário fique sobre a imagem */
    }

    /* Centralizar o conteúdo vertical e horizontalmente */
    .login-wrapper {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        position: relative;
    }

    form {
        display: flex;
        flex-direction: column;
    }

    .mb-3 label {
        font-weight: bold;
        font-size: 1.1em;
    }

    .form-control {
        padding: 10px;
        font-size: 1em;
        border: 1px solid #ccc;
        border-radius: 5px;
        margin-bottom: 15px;
    }

    .btn-warning {
        background-color: #f0ad4e;
        color: black;
        border: none;
        padding: 10px 0;
        border-radius: 5px;
        font-size: 1.1em;
        transition: background-color 0.3s ease;
    }

        .btn-warning:hover {
            background-color: #d98c1f;
            cursor: pointer;
        }

    .alert-danger {
        position: absolute;
        top: 20px;
        right: 20px;
        z-index: 1000;
        background-color: rgba(255, 0, 0, 0.8);
        color: white;
        padding: 10px;
        border-radius: 5px;
    }

    /* Estilo para o cabeçalho que fica fixo na parte superior */
    header {
        position: relative;
        top: 0;
        left: 0;
        width: 100%;
        background-color: #fff;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        z-index: 1000;
    }

    .login-wrapper {
        padding-bottom: 150px; /* Espaço para o cabeçalho */
    }

    /* Remover espaço branco abaixo do cabeçalho */
    main {
        padding: 0;
        margin: 0;
    }
</style>

<!-- Container principal com o fundo desfocado -->
<div class="login-background"></div>

<style>
    /* Estrutura principal */
    .content-section {
        margin-bottom: 30px;
        text-align: center;
    }

    .content-wrapper {
        display: flex;
        align-items: flex-start;
        gap: 20px;
        margin-bottom: 20px;
    }

    .content-text {
        flex: 1;
        font-size: 1.1em;
        color: #333;
    }

    .content-image {
        width: 200px;
        height: auto;
        border-radius: 5px;
    }

    .section-title {
        font-size: 1.5em;
        font-weight: bold;
        color: #333;
        margin-bottom: 10px;
    }

    /* Centralizando a descrição do FindBooks */
    .findbooks-section {
        max-width: 600px;
        margin: 0 auto;
    }

    /* Configurações para a equipe */
    .team-section {
        text-align: left;
    }

    /* Estilo do nome da equipe (menor que o título) */
    .team-name {
        font-size: 1.2em; /* Ajuste o tamanho conforme desejar */
        font-weight: normal;
        color: #555;
    }

    /* Estilos dos ícones de redes sociais */
    .social-icons a {
        margin: 0 5px;
        color: inherit; /* Para garantir que a cor do texto seja aplicada */
        text-decoration: none; /* Remove o sublinhado */
        font-size: 24px; /* Ajusta o tamanho do ícone */
    }
</style>

<div class="login-wrapper">
    <div class="login-container">
        <!-- Seção FindBooks (centralizada) -->
        <div class="content-section findbooks-section">
            <div class="section-title">Contato</div>
            <div class="content-text">
                <p>
                    Email: findbooks2024@hotmail.com <br />
                    Telefone: (15) 0000-0000
                </p>
            </div>
        </div>

        <!-- Redes sociais -->
        <div class="content-section">
            <div class="section-title">Siga-nos</div>
            <div class="content-text social-icons">
                <a href="https://www.instagram.com" target="_blank">
                    <i class="bi bi-instagram"></i>
                </a>
                <a href="https://www.twitter.com" target="_blank">
                    <i class="bi bi-twitter"></i>
                </a>
                <a href="https://www.facebook.com" target="_blank">
                    <i class="bi bi-facebook"></i>
                </a>
            </div>
        </div>
    </div>
</div>

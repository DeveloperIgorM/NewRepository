@model IEnumerable<LivroModel>

@{
    Layout = "_Layout";
}

@if (TempData["MensagemSucesso"] != null)
{
    <div class="alert alert-success text-dark" role="alert">
        @TempData["MensagemSucesso"]
    </div>
}

<style>
    /* Estilo Geral */
    body {
        font-family: 'Poppins', sans-serif;
        background: linear-gradient(135deg, #f5f7fa, #7B68EE);
        margin: 0;
        padding: 0;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        background: linear-gradient(135deg, #f5f7fa, #7B68EE);
        padding: 20px;
    }

    h1, h5, p, label {
        color: #333;
    }

    .btn {
        padding: 10px 20px;
        border-radius: 30px;
        transition: all 0.3s ease;
        font-weight: bold;
        font-size: 0.9rem;
    }

    .btn-success:hover {
        background-color: #28a745;
        color: #fff;
        transform: scale(1.05);
    }

    .btn-primary:hover {
        background-color: #007bff;
        color: #fff;
        transform: scale(1.05);
    }

    .btn-warning:hover {
        background-color: #f39c12;
        color: #fff;
        transform: scale(1.05);
    }

    .btn-danger:hover {
        background-color: #e74c3c;
        color: #fff;
        transform: scale(1.05);
    }

    /* Estilo dos Cards */
    .row {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
        gap: 20px;
    }

    .card {
        background: linear-gradient(135deg, #f5f7fa, #808080);
        border: 2px solid black;
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        width: 100%;
        max-width: 260px; /* Tamanho reduzido do card */
        display: flex;
        flex-direction: column;
    }

        .card:hover {
            transform: translateY(-10px);
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.2);
        }

    .card-img-top {
        height: 220px; /* Imagem maior */
        object-fit: cover;
        transition: transform 0.3s ease;
    }

    .card:hover .card-img-top {
        transform: scale(1.1);
    }

    .card-body {
        padding: 15px; /* Redução no padding do conteúdo */
        text-align: center;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        flex-grow: 1;
    }

    .card-title {
        font-size: 1rem;
        font-weight: bold;
        color: #000;
        margin-bottom: 8px;
    }

    .card-text {
        font-size: 0.85rem;
        color: #333;
        margin-bottom: 10px;
    }

    .card-body a {
        display: block;
        margin: 5px auto;
        width: 90%;
    }

    /* Botão "Voltar ao topo" */
    #backToTop {
        display: none;
        position: fixed;
        bottom: 20px;
        right: 20px;
        background-color: #007bff;
        color: white;
        border: none;
        padding: 15px;
        border-radius: 50%;
        cursor: pointer;
        font-size: 18px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        transition: all 0.3s ease;
    }

        #backToTop:hover {
            background-color: #0056b3;
            transform: scale(1.1);
        }
</style>

<div class="container py-5">
    <!-- Mensagens e Botões -->
    <div class="text-center mb-5">
        <h1>Biblioteca Virtual</h1>
        @if (ViewBag.UsuarioLogado)
        {
            <a class="btn btn-success" asp-controller="Livros" asp-action="Exportar">Exportar Modelo</a>
            <a class="btn btn-primary" asp-controller="Livros" asp-action="Cadastrar">Cadastrar Novo Livro</a>
        }
        else
        {
            <p class="text-center text-danger">Por favor, faça login para cadastrar livros.</p>
        }
    </div>

    <!-- Cards de Livros -->
    <div class="row">
        @if (Model != null && Model.Any())
        {
            @foreach (var livro in Model)
            {
                <div class="card">
                    <!-- Verifica se a imagem está disponível -->
                    <img src="~/imagem/@(string.IsNullOrEmpty(livro.Capa) ? "placeholder.jpg" : livro.Capa)"
                         class="card-img-top"
                         alt="@livro.Titulo">
                    <div class="card-body">
                        <h5 class="card-title">@livro.Titulo</h5>
                        <p class="card-text"><strong>Autor:</strong> @livro.Autor</p>
                        <p class="card-text"><strong>Gênero:</strong> @livro.Genero</p>
                        <p class="card-text"><strong>Ano:</strong> @livro.AnoPublicacao</p>
                    </div>

                    @if (ViewBag.UsuarioLogado)
                    {
                        <div class="card-body">
                            <a class="btn btn-warning"
                               asp-controller="Livros"
                               asp-action="Editar"
                               asp-route-id="@livro.Id">Editar</a>
                            <a class="btn btn-danger"
                               asp-controller="Livros"
                               asp-action="Remover"
                               asp-route-id="@livro.Id">Remover</a>
                        </div>
                    }
                </div>
            }
        }
        else
        {
            <p class="text-center">Nenhum livro cadastrado!</p>
        }
    </div>
</div>

<button id="backToTop" title="Voltar ao topo">↑</button>

<script>
    // Exibição do botão "Voltar ao topo"
    window.onscroll = function () {
        const backToTop = document.getElementById("backToTop");
        if (document.body.scrollTop > 100 || document.documentElement.scrollTop > 100) {
            backToTop.style.display = "block";
        } else {
            backToTop.style.display = "none";
        }
    };

    // Rolar suavemente ao topo
    document.getElementById("backToTop").onclick = function () {
        window.scrollTo({ top: 0, behavior: 'smooth' });
    };
</script>
